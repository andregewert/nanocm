        <?php echo $this->convertTextWithFullMarkup($this->article->content); ?>

        <div class="articlefooter">
            <p>Ver&ouml;ffentlicht von
                <?php echo $this->htmlEncode($this->orm->convertUserIdToName($this->article->author_id, false)); ?>
