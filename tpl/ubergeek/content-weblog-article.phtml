                <div class="form-group captcha_container" style="text-align: right">
                    <input type="hidden" name="ac" value="s" />
                    <input type="button" class="button submit" value="Kommentieren">
                </div>
            </div>
        <?php endif; ?>
    <?php endif; ?>
</div>
