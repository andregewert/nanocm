                            <p><?php echo $this->convertTextWithBasicMarkup($this->htmlEncode($comment->content)); ?></p>

                            <div class="details">
                                <p>Geschrieben am <?php echo $comment->creation_timestamp->format('d.m.y, H:i'); ?></p>
                            </div>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
        <?php endif; ?>

        <?php if ($this->article->enable_comments) : ?>
            <div class="nonprint" id="form_comment">
                <h2><a name="comment"></a>Kommentar hinterlassen</h2>

